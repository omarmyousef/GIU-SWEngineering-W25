<!DOCTYPE html>
<html>
  <head>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
      <script src="/src/cart.js" type="text/javascript"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/dashboard">GIU Food Trucks</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/trucks">Browse Trucks</a></li>
          <li class="active"><a href="/cart">My Cart</a></li>
          <li><a href="/myOrders">My Orders</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="page-header">
        <h2>Shopping Cart</h2>
      </div>

      <div id="empty-cart" class="alert alert-info" style="display:none;">
        Your cart is empty. <a href="/trucks" class="alert-link">Browse trucks to add items.</a>
      </div>

      <div id="cart-content" style="display:none;">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Item</th>
              <th>Price</th>
              <th style="width: 160px;">Quantity</th>
              <th>Subtotal</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="cart-items-body">
          </tbody>
        </table>

        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label for="pickupTime">Scheduled Pickup Time</label>
              <input type="datetime-local" id="pickupTime" class="form-control" />
            </div>
          </div>
          <div class="col-sm-6 text-right">
            <h4>Total: <span id="cart-total">0.00</span> EGP</h4>
            <button id="place-order" class="btn btn-success">Place Order</button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>




