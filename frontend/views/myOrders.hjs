<!DOCTYPE html>
<html>
  <head>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
      <script src="/src/myOrders.js" type="text/javascript"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/dashboard">GIU Food Trucks</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/trucks">Browse Trucks</a></li>
          <li><a href="/cart">My Cart</a></li>
          <li class="active"><a href="/myOrders">My Orders</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="page-header">
        <h2>My Orders</h2>
      </div>

      <div id="no-orders" class="alert alert-info" style="display:none;">
        You have no orders yet. <a href="/trucks" class="alert-link">Browse trucks to place your first order.</a>
      </div>

      <table id="orders-table" class="table table-striped table-bordered" style="display:none;">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Truck</th>
            <th>Status</th>
            <th>Total Price</th>
            <th>Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="orders-body">
        </tbody>
      </table>
    </div>

    <!-- Order details modal -->
    <div id="orderDetailsModal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Order Details</h4>
          </div>
          <div class="modal-body">
            <p><strong>Order ID:</strong> <span id="modal-order-id"></span></p>
            <p><strong>Truck:</strong> <span id="modal-truck-name"></span></p>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Item</th>
                  <th>Qty</th>
                  <th>Price</th>
                  <th>Subtotal</th>
                </tr>
              </thead>
              <tbody id="order-items-body">
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>




