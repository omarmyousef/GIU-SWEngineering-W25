<!DOCTYPE html>
<html>
  <head>
      <title>Vendor Orders</title>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
      <script src="/src/ui.js" type="text/javascript"></script>
      <script src="/src/vendorOrders.js" type="text/javascript"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/dashboard">GIU Food Trucks - Vendor</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/dashboard">Dashboard</a></li>
          <li class="active"><a href="/vendor/orders">Orders</a></li>
          <li><a href="/vendor/menu">Menu</a></li>
          <li><a href="/vendor/truck">Truck</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="page-header">
        <h2>All Orders</h2>
        <p class="text-muted">Manage all incoming orders for your truck.</p>
      </div>

      <div id="no-orders-vendor" class="alert alert-info" style="display:none;">
        No orders yet. When customers place orders, they will appear here.
      </div>

      <table class="table table-striped table-bordered" id="vendor-orders-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Customer</th>
            <th>Status</th>
            <th>Pickup Time</th>
            <th>Total</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="vendor-orders-body">
        </tbody>
      </table>
    </div>

    <!-- Order details modal -->
    <div id="vendorOrderDetailsModal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Order Details</h4>
          </div>
          <div class="modal-body">
            <p><strong>Order ID:</strong> <span id="vendor-modal-order-id"></span></p>
            <p><strong>Pickup time:</strong> <span id="vendor-modal-pickup-time"></span></p>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Item</th>
                  <th>Qty</th>
                  <th>Price</th>
                  <th>Subtotal</th>
                </tr>
              </thead>
              <tbody id="vendor-order-items-body">
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>


