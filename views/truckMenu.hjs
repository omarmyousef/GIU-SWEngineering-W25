<!DOCTYPE html>
<html>
  <head>
      <title>Truck Menu</title>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
      <script src="/src/ui.js" type="text/javascript"></script>
      <script>
        // Expose truckId to frontend JS
        window.TRUCK_ID = "{{truckId}}";
      </script>
      <script src="/src/truckMenu.js" type="text/javascript"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/customer/dashboard">GIU Food Trucks</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/trucks">Browse Trucks</a></li>
          <li><a href="/cart">My Cart</a></li>
          <li><a href="/myOrders">My Orders</a></li>
          <li><a href="#" data-logout="1">Logout</a></li>
        </ul>
      </div>
    </nav>

    <div class="container" id="truck-menu-container">
      <div class="page-header">
        <h2 id="truck-name-heading">Truck Menu</h2>
        <p id="truck-description" class="text-muted"></p>
      </div>

      <div id="no-items" class="alert alert-info" style="display:none;">
        This truck currently has no available menu items.
      </div>

      <div class="row" style="margin-bottom:15px;">
        <div class="col-sm-4">
          <label for="categoryFilter">Category</label>
          <select id="categoryFilter" class="form-control">
            <option value="">All categories</option>
            <option value="mains">Mains</option>
            <option value="sides">Sides</option>
            <option value="drinks">Drinks</option>
            <option value="desserts">Desserts</option>
          </select>
        </div>
        <div class="col-sm-4">
          <label for="menuSearch">Search</label>
          <input id="menuSearch" class="form-control" placeholder="Search menu items...">
        </div>
        <div class="col-sm-4 text-right" style="margin-top:25px;">
          <a class="btn btn-default" href="/cart">Go to Cart</a>
        </div>
      </div>

      <table id="menu-table" class="table table-striped table-bordered" style="display:none;">
        <thead>
          <tr>
            <th>Item</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price (EGP)</th>
            <th style="width: 180px;">Quantity</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="menu-body">
        </tbody>
      </table>
    </div>
  </body>
</html>


