<!DOCTYPE html>
<html>
  <head>
      <title>Vendor Menu Management</title>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
      <script src="/src/ui.js" type="text/javascript"></script>
      <script src="/src/vendorMenu.js" type="text/javascript"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/vendor/dashboard">GIU Food Trucks - Vendor</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/vendor/dashboard">Dashboard</a></li>
          <li><a href="/vendor/orders">Orders</a></li>
          <li class="active"><a href="/vendor/menu">Menu</a></li>
          <li><a href="/vendor/truck">Truck</a></li>
          <li><a href="#" data-logout="1">Logout</a></li>
        </ul>
      </div>
    </nav>

    <div class="container app-shell">
      <div class="page-header">
        <h2>Menu Management</h2>
        <p class="text-muted">View and manage all menu items for your truck.</p>
      </div>

      <div class="row" style="margin-bottom:15px;">
        <div class="col-sm-6">
          <input id="vendorMenuSearch" class="form-control" placeholder="Search menu items...">
        </div>
        <div class="col-sm-6 text-right">
          <button id="add-item-btn" class="btn btn-primary">Add New Item</button>
        </div>
      </div>

      <table class="table table-striped table-bordered" id="vendor-menu-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price</th>
            <th>Availability</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="vendor-menu-body">
        </tbody>
      </table>

      <div id="no-items-vendor" class="alert alert-info" style="display:none;">
        No menu items yet. Use "Add New Item" to create your first item.
      </div>
    </div>

    <!-- Add/Edit Item Modal -->
    <div id="vendorMenuItemModal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="vendor-menu-modal-title">Menu Item</h4>
          </div>
          <div class="modal-body">
            <form>
              <input type="hidden" id="vendor-menu-item-id" />
              <div class="form-group">
                <label for="vendor-menu-name">Name</label>
                <input type="text" id="vendor-menu-name" class="form-control" />
              </div>
              <div class="form-group">
                <label for="vendor-menu-description">Description</label>
                <textarea id="vendor-menu-description" class="form-control"></textarea>
              </div>
              <div class="form-group">
                <label for="vendor-menu-category">Category</label>
                <input type="text" id="vendor-menu-category" class="form-control" placeholder="e.g. mains, sides, drinks" />
              </div>
              <div class="form-group">
                <label for="vendor-menu-price">Price (EGP)</label>
                <input type="number" min="0" step="0.01" id="vendor-menu-price" class="form-control" />
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" id="vendor-menu-available" checked />
                  Available
                </label>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" id="vendor-menu-save-btn">Save</button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>




