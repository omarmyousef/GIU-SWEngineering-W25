<!DOCTYPE html>
<html>
  <head>
      <title>Vendor Dashboard</title>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
      <script src="/src/ui.js" type="text/javascript"></script>
      <script src="/src/vendorDashboard.js" type="text/javascript"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/vendor/dashboard">GIU Food Trucks - Vendor</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li class="active"><a href="/vendor/dashboard">Dashboard</a></li>
          <li><a href="/vendor/orders">Orders</a></li>
          <li><a href="/vendor/menu">Menu</a></li>
          <li><a href="/vendor/truck">Truck</a></li>
          <li><a href="#" data-logout="1">Logout</a></li>
        </ul>
      </div>
    </nav>

    <div class="container app-shell">
      <div class="page-header">
        <h2>Welcome, {{ name }}</h2>
        <p class="text-muted">Manage your truck, menu, and incoming orders.</p>
      </div>

      <div class="row">
        <div class="col-md-4">
          <h3>Truck Info</h3>
          <div id="truck-info" class="app-card">
            <div class="app-card-body">
            <p><strong>Name:</strong> <span id="truck-name">-</span></p>
            <p><strong>Status:</strong> <span id="truck-status">-</span></p>
            <p><strong>Accepting Orders:</strong> <span id="truck-order-status">-</span></p>
            <button id="toggle-orders" class="btn btn-sm btn-primary">Toggle accepting orders</button>
            </div>
          </div>

          <h3>Today’s Overview</h3>
          <div class="app-card">
            <div class="app-card-body">
              <div class="app-kpi" style="margin-bottom:10px;">
                <div class="kpi-label">Pending</div>
                <div class="kpi-value" id="stat-pending">0</div>
              </div>
              <div class="app-kpi" style="margin-bottom:10px;">
                <div class="kpi-label">Preparing</div>
                <div class="kpi-value" id="stat-preparing">0</div>
              </div>
              <div class="app-kpi">
                <div class="kpi-label">Ready</div>
                <div class="kpi-value" id="stat-ready">0</div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-8">
          <h3>Today’s Orders</h3>
          <div class="app-table-wrap">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Customer</th>
                  <th>Status</th>
                  <th>Pickup Time</th>
                  <th>Total</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="orders-body">
              </tbody>
            </table>
          </div>
          <div id="no-orders-vendor" class="alert alert-info" style="display:none;">
            No orders yet. Customers will see your truck when it's accepting orders.
          </div>
        </div>
      </div>
    </div>
  </body>
</html>


