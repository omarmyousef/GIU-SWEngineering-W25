<!DOCTYPE html>
<html>
  <head>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
      <script src="/src/ui.js" type="text/javascript"></script>
      <script src="/src/cart.js" type="text/javascript"></script>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/customer/dashboard">GIU Food Trucks</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/trucks">Browse Trucks</a></li>
          <li class="active"><a href="/cart">My Cart</a></li>
          <li><a href="/myOrders">My Orders</a></li>
          <li><a href="#" data-logout="1">Logout</a></li>
        </ul>
      </div>
    </nav>

    <div class="container app-shell">
      <div class="page-header">
        <h2>Shopping Cart</h2>
      </div>

      <div id="empty-cart" class="alert alert-info" style="display:none;">
        Your cart is empty. <a href="/trucks" class="alert-link">Browse trucks to add items.</a>
      </div>

      <div id="cart-content" style="display:none;">
        <div class="row">
          <div class="col-md-8">
            <div class="app-table-wrap">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Item</th>
                    <th>Price</th>
                    <th style="width: 160px;">Quantity</th>
                    <th>Subtotal</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody id="cart-items-body">
                </tbody>
              </table>
            </div>
          </div>

          <div class="col-md-4">
            <div class="app-card" style="margin-bottom:14px;">
              <div class="app-card-header">
                <h3 class="app-card-title" style="font-size:16px;">Pickup time</h3>
              </div>
              <div class="app-card-body">
                <div class="form-group">
                  <label>Date</label>
                  <input type="date" id="pickupDate" class="form-control" />
                </div>
                <div class="form-group">
                  <label>Time</label>
                  <select id="pickupTimeSelect" class="form-control"></select>
                </div>
                <div class="app-footer-note">
                  Defaults to today, about 15 minutes from now.
                </div>
              </div>
            </div>

            <div class="app-card">
              <div class="app-card-header">
                <h3 class="app-card-title" style="font-size:16px;">Checkout</h3>
              </div>
              <div class="app-card-body">
                <div class="app-kpi" style="margin-bottom:12px;">
                  <div class="kpi-label">Total</div>
                  <div class="kpi-value"><span id="cart-total">0.00</span> EGP</div>
                </div>
                <button id="place-order" class="btn btn-success btn-block">Place Order</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>


